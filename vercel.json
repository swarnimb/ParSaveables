{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/api/processScorecard.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "src/api/chatbot.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "src/api/generatePodcast.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 600
      }
    }
  ],
  "routes": [
    {
      "src": "/api/processScorecard",
      "dest": "src/api/processScorecard.js"
    },
    {
      "src": "/api/chatbot",
      "dest": "src/api/chatbot.js"
    },
    {
      "src": "/api/generatePodcast",
      "dest": "src/api/generatePodcast.js"
    },
    {
      "src": "/",
      "dest": "public/dashboard/index.html"
    },
    {
      "src": "/dashboard",
      "dest": "public/dashboard/index.html"
    },
    {
      "src": "/old",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/generatePodcast",
      "schedule": "0 12 1 * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
