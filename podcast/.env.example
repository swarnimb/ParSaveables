# ============================================
# ParSaveables Podcast Generator Configuration
# ============================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Anthropic API (Claude for script generation)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Google Cloud Text-to-Speech (FREE - 1M chars/month)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=./google-cloud-credentials.json

# GitHub Configuration (for hosting MP3 files)
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=ParSaveables

# Podcast Configuration
PODCAST_SHOW_NAME=Chain Reactions
PODCAST_HOST_NAME=Dave
PODCAST_DESCRIPTION=The official ParSaveables disc golf podcast featuring tournament recaps, player highlights, and championship-level analysis!
PODCAST_AUTHOR=ParSaveables League
PODCAST_EMAIL=parsaveables@example.com
PODCAST_WEBSITE=https://par-saveables.vercel.app

# Audio Configuration
INTRO_MUSIC_PATH=./assets/intro-music.mp3
OUTRO_MUSIC_PATH=./assets/outro-music.mp3
INTRO_DURATION_SECONDS=20
OUTRO_DURATION_SECONDS=15

# Google Cloud TTS Voice Configuration
# Voice options: https://cloud.google.com/text-to-speech/docs/voices
TTS_VOICE_NAME=en-US-Neural2-J
TTS_VOICE_GENDER=MALE
TTS_SPEAKING_RATE=1.0
TTS_PITCH=0.0

# Output Configuration
OUTPUT_DIR=./output
TEMP_DIR=./temp

# Episode Configuration
SEASON_RECAP_TARGET_MINUTES=10
MONTHLY_RECAP_MIN_MINUTES=3
MONTHLY_RECAP_MAX_MINUTES=5

# Optional: GroupMe Notification
GROUPME_BOT_ID=your-bot-id-here
GROUPME_NOTIFY_ON_PUBLISH=false

# Debug Mode
DEBUG=false
LOG_LEVEL=info
